<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MYB" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/accent_color_light</item>
        <item name="colorPrimaryVariant">@color/table_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/table_color</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>


    </style>

    <style name="LoginButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/accent_color_light</item>
    </style>

    <style name="SignupButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/accent_color_dark</item>
    </style>

    <style name="ThemeBackground" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ThemeText" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MYB" parent="Base.Theme.MYB" />
</resources>