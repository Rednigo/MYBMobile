<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Category Template -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D32F2F"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:text="MYB"
                android:textStyle="bold"
                android:textSize="24sp" />

            <!-- Income Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Income"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="8dp"/>

            <!-- List for Income items -->
            <ListView
                android:id="@+id/listIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="10dp"
                android:listSelector="@android:color/transparent" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ add income"
                android:id="@+id/addIncomeButton"
                android:background="@drawable/custom_button" />

            <!-- Preservations/Savings Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preservations/Savings"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="8dp"/>

            <!-- List for Preservations/Savings items -->
            <ListView
                android:id="@+id/listSavings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="10dp"
                android:listSelector="@android:color/transparent" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ add preservation"
                android:id="@+id/addPreservationButton"
                android:background="@drawable/custom_button" />

            <!-- Expenses Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="8dp"/>

            <!-- List for Expenses items -->
            <!-- You would create a separate ListView or RecyclerView here similar to above -->

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ add an expense"
                android:id="@+id/addExpenseButton"
                android:background="@drawable/custom_button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ add category"
                android:id="@+id/addCategoryButton"
                android:background="@drawable/custom_button" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
